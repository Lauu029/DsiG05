<Page
    x:Class="Pandilla_Basurilla.PreparacionPartida"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pandilla_Basurilla"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <Style x:Key="ExitStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFB0130F" />
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="CornerRadius" Value="3"/>
        </Style>
        <Style x:Key="ButtonsStyle" TargetType="Button">
            <Setter Property="Margin" Value="40,10,40,10"/>
            <Setter Property="Width" Value="300"/>
            <Setter Property="Height" Value="100"/>
            <Setter Property="Background" Value="#FFE2EE79"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="FontStretch" Value="Condensed"/>
            <Setter Property="CornerRadius" Value="3"/>
        </Style>
    </Page.Resources>
    <Grid Background="#FFF7FADE">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Grid.Row="0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="30"
                    Background="#FFA8C6FA"
                    BorderThickness="5"
                    BorderBrush="#FF0844A4"
                    CornerRadius="3">
            <TextBlock Text="Player 1"
                       Foreground="Black"
                       FontSize="40"
                       Width="200"
                       Margin="10"
                       HorizontalAlignment="Center" TextAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="1"
                    VerticalAlignment="Center"
                    Margin="30,0,30,0" Height="555">
            <Button x:Name="Personajes"
                    Content="Personajes"
                    HorizontalAlignment="Center"
                    Style="{StaticResource ButtonsStyle}"
                    Click="Personajes_Click"/>
            <Button x:Name="Skins"
                    Content="Skins"
                    HorizontalAlignment="Center"
                    Style="{StaticResource ButtonsStyle}"
                    Click="Skins_Click"/>
            <Button x:Name="Mapas"
                    Content="Mapas"
                    HorizontalAlignment="Center"
                    Style="{StaticResource ButtonsStyle}"
                    Click="Mapas_Click"/>
        </StackPanel>
        <Button Grid.Column="1" Grid.Row="1"
                x:Name="BackButton"
                    Style="{StaticResource ExitStyle}"
                    Margin="50"
                    Content="Rendirse"
                    IsEnabled="{x:Bind Mode=OneWay, Path=Frame.CanGoBack}" 
                    ToolTipService.ToolTip="Back"
                    Click="BackButton_Click"
                    Width="170" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="54"/>
        <Button Grid.Column="1" Grid.Row="1"
                x:Name="PlayButton"
                     Style="{StaticResource ButtonsStyle}"
                     Margin="50"
                     Content="Jugar"
                     IsEnabled="{x:Bind Mode=OneWay, Path=Frame.CanGoBack}" 
                     ToolTipService.ToolTip="Back"
                     Click="PlayButton_Click"
                     Width="170"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom" Height="54"
                    />

        <StackPanel Grid.Column="1"
                HorizontalAlignment="Left"
                       VerticalAlignment="Top" Width="100" Height="100"  
                       Background="#FFE9F29B"
                       BorderBrush="#FFC1D045"
                        BorderThickness="3"
                        CornerRadius="3">

            <TextBlock Text="30" 
                       FontSize="50"
                       Foreground="Black"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Margin="10"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="0"
                HorizontalAlignment="Right"
                        VerticalAlignment="Top"
                        Width="400"
                        Height="200"
                    Margin="20"
                        Background="#FFFFB4B0"
                    BorderBrush="#FFE61610"
                    BorderThickness="5"
                    CornerRadius="3">
            <Image Height="150" Width="150"
                   Source="Assets/default-profile-image.png" VerticalAlignment="Center" HorizontalAlignment="Left"
                   Margin="20"/>

        </StackPanel>
        <TextBlock Grid.Column="1" Grid.Row="0"
                Text="PLAYER 2"
                       Margin="30"
                       Foreground="Black"
                       HorizontalAlignment="Right"
                       FontSize="30"
                       VerticalAlignment="Top"/>

        <Grid Grid.Column="1" x:Name="MapsScreen"  Margin="120,80,120,200"
                    CornerRadius="5"
                    BorderBrush="#FFE2EE79"
                    BorderThickness="6" Grid.Row="1" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="1" Grid.Column="1"
                    Width="300" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="Assets/mapa1.png"/>
            </Button>
            <Button Grid.Row="0" Grid.Column="1"
                    Width="300" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="Assets/mapa2.png"/>
            </Button>
            <Button  Grid.Row="1" Grid.Column="0"
                    Width="300" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="Assets/mapa3.png"/>
            </Button>
            <Button  Grid.Row="0" Grid.Column="0"
                    Width="300" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="Assets/mapa4.png"/>
            </Button>
        </Grid>
        <Grid Grid.Column="1" x:Name="SkinsScreen"  Margin="120,80,120,200"
                    CornerRadius="5"
                    BorderBrush="#FFE2EE79"
                    BorderThickness="6" Grid.Row="1" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="1" Grid.Column="1"
                    Width="300" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="Assets/pistola1.png"/>
            </Button>
            <Button Grid.Row="0" Grid.Column="1"
                    Width="300" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="Assets/pistola2.png"/>
            </Button>
            <Button  Grid.Row="1" Grid.Column="0"
                    Width="300" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="Assets/pistola3.png"/>
            </Button>
            <Button  Grid.Row="0" Grid.Column="0"
                    Width="300" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="Assets/pistola4.png"/>
            </Button>
            <Button  Grid.Row="2" Grid.Column="0"
                    Width="300" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="Assets/pistola5.png"/>
            </Button>
            <Button  Grid.Row="2" Grid.Column="1"
                    Width="300" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="Assets/pistola6.png"/>
            </Button>
            <Button  Grid.Row="0" Grid.Column="2"
                    Width="300" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="Assets/pistola7.png"/>
            </Button>
            <Button  Grid.Row="1" Grid.Column="2"
                    Width="300" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="Assets/pistola8.png"/>
            </Button>
            <Button  Grid.Row="2" Grid.Column="2"
                    Width="300" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="Assets/pistola9.png"/>
            </Button>
        </Grid>
        <Grid Grid.Column="1" x:Name="PersonajesScreen"  Margin="120,80,120,200"
                    CornerRadius="5"
                    BorderBrush="#FFE2EE79"
                    BorderThickness="6" Grid.Row="1" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Row="1" Grid.Column="1"
                    Width="300" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="Assets/ajo.png"/>
            </Button>
            <Button Grid.Row="0" Grid.Column="1"
                    Width="300" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="Assets/awacato.png"/>
            </Button>
            <Button  Grid.Row="1" Grid.Column="0"
                    Width="300" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="Assets/berenjeno.png"/>
            </Button>
            <Button  Grid.Row="0" Grid.Column="0"
                    Width="300" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="Assets/pimiento.png"/>
            </Button>
            <Button  Grid.Row="2" Grid.Column="0"
                    Width="300" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="Assets/sandia.png"/>
            </Button>
            <Button  Grid.Row="2" Grid.Column="1"
                    Width="300" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="Assets/platano.png"/>
            </Button>
            <Button  Grid.Row="0" Grid.Column="2"
                    Width="300" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="Assets/fresa.png"/>
            </Button>
            <Button  Grid.Row="1" Grid.Column="2"
                    Width="300" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="Assets/brocoli.png"/>
            </Button>
            <Button  Grid.Row="2" Grid.Column="2"
                    Width="300" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Image Source="Assets/champ.png"/>
            </Button>
        </Grid>

    </Grid>
</Page>
