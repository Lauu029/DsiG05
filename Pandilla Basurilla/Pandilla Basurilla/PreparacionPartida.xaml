<Page
    x:Class="Pandilla_Basurilla.PreparacionPartida"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pandilla_Basurilla"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
    <Page.Resources>
        <Style x:Key="ExitStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFB0130F" />
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="20"/>
        </Style>
        <Style x:Key="ButtonsStyle" TargetType="Button">
            <Setter Property="Margin" Value="40,10,40,10"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Background" Value="#FFE2EE79"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="FontStretch" Value="Condensed"/>
        </Style>
    </Page.Resources>
    <Grid Background="#FFF7FADE">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left"
                    Margin="30"
                    Background="#FFA8C6FA"
                    BorderThickness="5"
                    BorderBrush="#FF0844A4">
            <TextBlock Text="Player 1"
                       Foreground="Black"
                       FontSize="40"
                       Width="200"
                       Margin="10"
                       HorizontalAlignment="Center"/>
        </StackPanel>
        <StackPanel Grid.Column="0"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Stretch"
                    Margin="30">
            <Button x:Name="Personajes"
                    Content="Personajes"
                    HorizontalAlignment="Center"
                    Style="{StaticResource ButtonsStyle}"/>
            <Button x:Name="Skins"
                    Content="Skins"
                    HorizontalAlignment="Center"
                    Style="{StaticResource ButtonsStyle}"/>
            <Button x:Name="Mapas"
                    Content="Mapas"
                    HorizontalAlignment="Center"
                    Style="{StaticResource ButtonsStyle}"/>
        </StackPanel>
        <StackPanel Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Button x:Name="BackButton"
                Style="{StaticResource ExitStyle}"
                VerticalAlignment="Bottom"
                Margin="50"
                Content="Rendirse"
                IsEnabled="{x:Bind Mode=OneWay, Path=Frame.CanGoBack}" 
                ToolTipService.ToolTip="Back"
                Click="BackButton_Click"
                Width="107"
                />
        </StackPanel>
    </Grid>
</Page>
