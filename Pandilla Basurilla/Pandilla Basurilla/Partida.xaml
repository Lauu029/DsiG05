<Page
    x:Class="Pandilla_Basurilla.Partida"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pandilla_Basurilla"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:Key="ExitStyle" TargetType="Button">
            <Setter Property="Background" Value="#d4403c" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="30"/>
        </Style>
        <Style x:Key="Button1" TargetType="Button">
            <Setter Property="Background" Value="#d6d6d6" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="30"/>
        </Style>
        <Style x:Key="Button2" TargetType="Button">
            <Setter Property="Background" Value="#d6d6d6" />
            <Setter Property="Foreground" Value="Black" />
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="15"/>
        </Style>
    </Page.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>

        <Rectangle Fill="#a8c6fa"/>
        <Rectangle Grid.Row="1"
                   Fill="#a8c6fa"/>
        <Rectangle Grid.Row="2"
                   Fill="White"/>

        <Rectangle Grid.Column="2"
            Fill="#ffb4b0"/>
        <Rectangle Grid.Column="2"
            Grid.Row="1"
                   Fill="#ffb4b0"/>
        <Rectangle Grid.Column="2" 
            Grid.Row="2"
                   Fill="#ffb4b0"/>

        <StackPanel Orientation="Horizontal"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Margin="0">

            <Rectangle Fill="#3d8af7"
                   Width="350"
                   Height="50"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,0"/>
            <Rectangle Fill="White"
                   Width="150"
                   Height="50"
                   HorizontalAlignment="Right"
                   Margin="0,0,0,0"/>
            
            <TextBlock Text="$ 20"
                   Margin="10"
                   FontSize="50"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Right"
                   Foreground="Black"/>
        </StackPanel>

        <TextBlock Text="VIDA JUGADOR 1"
                   Margin="75,0,0,0"
                   FontSize="30"
                   FontWeight="SemiBold"
                   CharacterSpacing="100"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Center"
                   Foreground="Black"/>

        <StackPanel Grid.Column="2"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0">

            <Rectangle Fill="#ff5d55"
                   Width="150"
                   Height="50"
                   HorizontalAlignment="Left"
                   Margin="140,0,0,0"/>
            <Rectangle Fill="White"
                   Width="350"
                   Height="50"
                   HorizontalAlignment="Right"
                   Margin="0,0,50,0"/>
        </StackPanel>
        
        <TextBlock Grid.Column="2" 
                   Text="VIDA JUGADOR 2"
                   Margin="0,0,75,0"
                   FontSize="30"
                   FontWeight="SemiBold"
                   CharacterSpacing="100"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Foreground="Black"/>

        

        <TextBlock Grid.Column="1"
                   Text="RONDA"
                   Margin="0,20,0,0"
                   FontSize="25"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   Foreground="Black"/>
        <TextBlock Grid.Column="1"
                   Text="3"
                   Margin="0,0,0,5"
                   FontSize="50"
                   FontWeight="SemiBold"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Foreground="Black"/>

        <Button Grid.Row="2"
                Grid.Column="2"
                x:Name="ExitButton"
                Style="{StaticResource ExitStyle}"
                Content="Salir"
                VerticalAlignment="Bottom"
                HorizontalAlignment="Right"
                Width="125"
                Height="75"
                Margin="0,0,50,0"
                Click="ExitButton_Click"/>

        <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="0">
            <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Margin="0">

                <Button 
                Style="{StaticResource Button1}"
                Content="ATAQUE"
                HorizontalAlignment="Stretch"
                Width="150"
                Height="75"
                Margin="20"/>

                <Button 
                Style="{StaticResource Button1}"
                Content="DEFENSA"
                HorizontalAlignment="Stretch"
                Width="150"
                Height="75"
                Margin="0"/>
            </StackPanel>

            <StackPanel Grid.Row="2"
                Orientation="Horizontal"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0">

                <Button 
                Style="{StaticResource Button2}"
                Content="MEJORA 1"
                HorizontalAlignment="Stretch"
                Width="100"
                Height="75"
                Margin="10"/>

                <Button 
                Style="{StaticResource Button2}"
                Content="MEJORA 2"
                HorizontalAlignment="Stretch"
                Width="100"
                Height="75"
                Margin="0"/>

                <Button 
                Style="{StaticResource Button2}"
                Content="MEJORA 3"
                HorizontalAlignment="Stretch"
                Width="100"
                Height="75"
                Margin="10"/>
            </StackPanel>
        </StackPanel>

        

    </Grid>
</Page>
