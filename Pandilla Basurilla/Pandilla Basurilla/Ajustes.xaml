<Page
    x:Class="Pandilla_Basurilla.Ajustes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Pandilla_Basurilla"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:Key="TittleStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#275211"/>
            <Setter Property="FontWeight" Value="ExtraBold"/>
            <Setter Property="FontStretch" Value="ExtraExpanded"/>
        </Style>

        <Style x:Key="ButtonsStyle" TargetType="Button">
            <Setter Property="Width" Value="400"/>
            <Setter Property="Height" Value="80"/>
            <Setter Property="Background" Value="#4c9d23"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontSize" Value="35"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontStretch" Value="Condensed"/>
            <Setter Property="Margin" Value="10, 15"/>
            <Setter Property="CornerRadius" Value="5"/>
        </Style>
        <Style x:Key="BackButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FFB0130F" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="30"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="30"/>
            <Setter Property="CornerRadius" Value="3"/>
        </Style>
    </Page.Resources>


    <Grid Background="#FFAEDD94">

        <Viewbox>
        <Grid Width="1165" Height="772">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>

                <Button x:Name="BackButton"
                Style="{StaticResource BackButtonStyle }" 
                Content="Volver"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Click="BackButton_Click"
                        Grid.Row="1"/>
            
                <StackPanel Orientation="Vertical"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Bottom"
                        Grid.Row="0"
                        Grid.Column="1">

                <TextBlock Text="AJUSTES"
                       HorizontalAlignment="Center"
                       FontSize="75"
                       Margin="30"
                       Style="{StaticResource TittleStyle}"/>

                <Button Content="MI CUENTA"
                    HorizontalAlignment="Stretch"
                    Name="MiCuentaButton"
                    Click="MiCuentaButton_Click"
                    Style="{StaticResource ButtonsStyle}"/>

                <Button Content="ESTADISTICAS"
                    Name="EstadisticasButton"
                    HorizontalAlignment="Stretch"
                    Click="EstadisticasButton_Click"
                    Style="{StaticResource ButtonsStyle}"/>

                <Button Content="IDIOMA"
                    HorizontalAlignment="Stretch"
                    Name="IdiomaButton"
                    Click="IdiomaButton_Click"
                    Style="{StaticResource ButtonsStyle}"/>
            </StackPanel>

            <StackPanel Grid.Row="1"
                        Grid.Column="1">

                <Canvas>
                    <Image Source="Assets/NoMusic.png" Height="60" Width="45"/>
                    <Image Source="Assets/NoSonidos.png" Height="110" Canvas.Top="65" Width="45"/>
                </Canvas>

                <Canvas HorizontalAlignment="Right">
                    <Image Source="Assets/Music.png"
                           Height="45" 
                           Width="40" 
                           Canvas.Left="-40"
                           Canvas.Top="6"/>

                    <Image Source="Assets/Sonidos.png" 
                           Height="45" 
                           Width="40" 
                           Canvas.Left="-40" 
                           Canvas.Top="98"/>

                </Canvas>

                <Slider Margin="50,10"
                        Background="#4c9d23"/>

                <TextBlock Text="Música"
                           FontSize="30"
                           HorizontalAlignment="Center"
                           FontWeight="Medium"
                           Foreground="Black"/>

                <Slider Margin="50,10"
                        Background="#4c9d23"/>

                <TextBlock Text="Sonidos"
                           FontSize="30"
                           HorizontalAlignment="Center"
                           FontWeight="Medium"
                           Foreground="Black"/>

            </StackPanel>

            <!--<StackPanel Margin="450,720,0,0"
                        Grid.RowSpan="2"
                        Orientation="Vertical">
                
                <Image Source="Assets/NoMusic.png"
                       Margin="0,0,0,40"/>
                
                <Image Source="Assets/NoSonidos.png"/>
                
            </StackPanel>

            <StackPanel Grid.Column="2"
                        Orientation="Vertical"
                        HorizontalAlignment="Left" 
                        Margin="0,720,0,90" 
                        Grid.RowSpan="2" >
                
                <Image Source="Assets/Music.png" Height="50" Width="40"
                       Margin="0,0,0,40"/>
                
                <Image Source="Assets/Sonidos.png" Height="55" Width="45"/>
            </StackPanel>-->

        </Grid>
        </Viewbox>
    </Grid>
</Page>
